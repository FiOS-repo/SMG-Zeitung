---
import Button from "./Button.astro"
import Split from "../layouts/Split.astro"
---

<style>
    .center {
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        z-index: 101;
    }
    .cover {
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        backdrop-filter: blur(10px);
        z-index: 100;
        animation-name: comein;
        animation-duration: 2s;
    }

    @keyframes comein {
        0% {
            backdrop-filter: blur(0px);
        }

        100% {
            backdrop-filter: blur(10px);
        }
    }

    .popup {
        max-width: 800px;
        padding: 2rem;
    }

    .popup h1 {
        margin-bottom: 1rem;
    }

    .popup p {
        margin-bottom: 2rem;
    }

    .popup img {
        max-width: 100%;
        height: auto;
        border-radius: 1.5rem;
    }

    .popup button {
        display: block;
        width: 100%;
        padding: 1rem;
        font-size: 1.25rem;
        text-align: center;
        background-color: #3b82f6;
        color: white;
        border: none;
        border-radius: 0.75rem;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .popup button:hover {
        background-color: #2563eb;
    }

    .widget-container {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
    }
</style>
