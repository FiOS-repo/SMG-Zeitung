<style>

  body {
    user-select: none;
    cursor: none; /* Hide the default cursor */
  }

  .custom-cursor {
    transition: transform 0.1s ease-out, width 0.2s ease-out, height 0.2s ease-out;
    z-index: 999;
  }

  .custom-cursor.click, .custom-cursor.drag {
    width: 40px; /* Increase size on click or drag */
    height: 40px; /* Increase size on click or drag */
  }

  .custom-cursor.dragging {
    width: 60px;
    height: 40px;
  }

  button:hover ~ .custom-cursor, p:hover ~ .custom-cursor, span:hover ~ .custom-cursor {
    opacity: 0;
  }
</style>
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const cursor = document.querySelector(".custom-cursor");
    let isDragging = false;
    let mouseX = 0, mouseY = 0;
    let cursorX = 0, cursorY = 0;

    document.addEventListener("mousemove", (e) => {
      mouseX = e.clientX;
      mouseY = e.clientY;
    });

    function animateCursor() {
      cursorX += (mouseX - cursorX) * 0.2;
      cursorY += (mouseY - cursorY) * 0.2;
      cursor.style.transform = `translate(${cursorX - cursor.offsetWidth / 2}px, ${cursorY - cursor.offsetHeight / 2}px)`;
      requestAnimationFrame(animateCursor);
    }
    requestAnimationFrame(animateCursor);

    document.addEventListener("mousedown", () => {
      isDragging = true;
      cursor.classList.add("dragging");
    });

    document.addEventListener("mouseup", () => {
      isDragging = false;
      cursor.classList.remove("dragging");
    });

    document.addEventListener("click", () => {
      cursor.classList.add("click");
      setTimeout(() => {
        cursor.classList.remove("click");
      }, 200); // Duration of the animation
    });

    document.addEventListener("dragstart", () => {
      cursor.classList.add("drag");
    });

    document.addEventListener("dragend", () => {
      cursor.classList.remove("drag");
    });

    document.querySelectorAll("button").forEach(element => {
      element.addEventListener("mouseenter", () => {
        cursor.style.opacity = 0;
      });
      element.addEventListener("mouseleave", () => {
        cursor.style.opacity = 1;
      });
    });
  });
</script>
