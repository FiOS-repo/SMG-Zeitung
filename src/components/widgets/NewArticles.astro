---
const { articles }: { articles: string[] } = Astro.props;

---
<!-- TODO: Fetch newest Articles from WordPress API-->
<div class="bg-blue-200 rounded-3xl bg-clip-padding backdrop-filter backdrop-blur-3xl bg-opacity-20 ring-1 ring-blue-200  p-6 shadow-lg w-72 mb-10">
    <div class="text-2xl text-blue-900 font-bold">Trendige Beiträge</div>
    <div class="mt-4">
        <p class="text-lg text-gray-800">Die Neusten Beiträge auf der SMGZ</p>
        <div class="mt-4">
            {articles.map((article, index) => (
                <span key={index} class="text-gray-700">{article}</span><br>
            ))}
        </div>
    </div>
</div>